<Window x:Class="MarkItDownX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MarkItDownX"
        mc:Ignorable="d"
        Title="MarkItDownX" Height="250" Width="300">
    <Window.Resources>
        <Color x:Key="DragOverColor">#ADD8E6</Color>
        <Color x:Key="DefaultDropZoneColor">#D3D3D3</Color>
        <Color x:Key="ProcessingColor">#FFFFE0</Color>
        <SolidColorBrush x:Key="DragOverBrush" Color="{StaticResource DragOverColor}"/>
        <SolidColorBrush x:Key="DefaultDropZoneBrush" Color="{StaticResource DefaultDropZoneColor}"/>
        <SolidColorBrush x:Key="ProcessingBrush" Color="{StaticResource ProcessingColor}"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- ドロップ領域 -->
        <Border x:Name="DropZone"
                Grid.Row="0"
                Background="#F0F0F0"
                BorderBrush="#CCCCCC"
                BorderThickness="2"
                CornerRadius="8"
                Margin="5"
                Height="120">

            <Border.Effect>
                <DropShadowEffect Color="Gray"
                                  Direction="270"
                                  ShadowDepth="2"
                                  Opacity="0.3"/>
            </Border.Effect>

            <Grid>
                <StackPanel VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                    <TextBlock Text="📁"
                               FontSize="24"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="ここにドロップ"
                               FontSize="16"
                               HorizontalAlignment="Center"
                               Foreground="#666666"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- プログレスバー -->
        <Border Grid.Row="1" 
                Background="#E8F4FD" 
                BorderBrush="#B8D4F0" 
                BorderThickness="1" 
                CornerRadius="4" 
                Margin="5" 
                x:Name="ProgressGrid" 
                Visibility="Collapsed"
                Panel.ZIndex="1000">
            <StackPanel Margin="10">
                <TextBlock x:Name="ProgressText" 
                           Text="処理中..." 
                           HorizontalAlignment="Center" 
                           FontWeight="Bold"
                           Foreground="#2E5C8A"
                           Margin="0,0,0,8"/>
                <ProgressBar x:Name="ProgressBar" 
                            Height="20" 
                            IsIndeterminate="True"/>
            </StackPanel>
        </Border>

        <!-- ログ表示エリア -->
        <GroupBox Grid.Row="2" Header="ログ" Margin="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBox x:Name="LogTextBox"
                         IsReadOnly="True"
                         FontFamily="Consolas"
                         FontSize="10"
                         Background="#F8F8F8"
                         Text="アプリケーションが起動しました..."/>
            </ScrollViewer>
        </GroupBox>
    </Grid>
</Window>
